<meta name="description" content="Leia o post {{posts.titulo}} de {{posts.autor}} publicado em {{posts.data}}.">
<title>{{posts.titulo}}</title>

<div class="container-sm">
    <div class="links cont">
    {{#if user}}
        <br>
        <a href="/admin/editar/{{posts._id}}"><button class="btns">Editar</button></a>
        <a href="/admin/excluir/{{posts._id}}"><button class="btns">Deletar</button></a>
        <br>
        <br>
        <br>
    {{else}}
