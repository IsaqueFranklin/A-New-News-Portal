    <h5 class="title">{{posts.titulo}}</h5>
    <br>
    <div class="" align="">
      <img src='{{posts.thumb}}' alt='imagem de capa do post' class='total' align="" />
      <br>
    </div>
    <br>
    <br>
    <div align="justify" class="">
      {{{posts.conteudo}}}
    </div>
    <br>
    </div>
</div>

<div class="container-sm">
  <div class="links cont">
  <br>
  <div class="">
    <h7 class="title" align="center">Posts recentes</h7>
  </div>
  <br>
  <br>
  {{#each post}}
    <a href="/website/ler/{{_id}}" class="href">
    <div class="effect borda">
        <div class="row no-gutters">
            <div class="col-md-3">
                <img src="{{thumb}}" class="card-img ig" alt="thumbnail">
            </div>
            <div class="ko">
                <small class="card-text">Publicado em {{data}}</small>
                <br>
                <h7 class="card-title">{{titulo}}</h7>
                <br>
                <p class="card-text text2">Escrito por {{autor}}</p>
            </div>
            
        </div>
    </div>
    </a>
  {{/each}}
  <br>
  <h7 class="text center">Veja todos os posts da <a href="/website/artigos">Nautilus</a></h7>
  <br>
  <br>
  </div>
  <hr>
</div>


