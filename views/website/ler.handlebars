<meta name="description" content="{{posts.titulo}} publicado em {{posts.data}}.">
<meta name="keywords" content="{{posts.titulo}}">
<title>{{posts.titulo}}</title>

<div class="container" style="margin-top: 20px;">
    <div class="">
    <br>
    <br>
    <br>
    <br>
    {{#if user}}
        <a href="/admin/editar/{{posts._id}}"><button class="btns">Editar</button></a>
        <a href="/admin/excluir/{{posts._id}}"><button class="btns">Deletar</button></a>
        <br>
        <br>
    {{else}}
    {{/if}}
    <div class="" align="">
      <img src='{{posts.thumb}}' alt='imagem de capa do post' class='total w-full h-auto' align="" />
      <br>
      <p class="text">    <a href="/{{posts.category}}"><button class="btns">{{posts.category}}</button></a>
Publicado em {{posts.data}} por <a href="/website/perfil/{{posts.email}}">{{posts.autor}}</a></p>
    </div>
    <h5 class="text-gray-800 text-2xl md:text-5xl tracking-tight font-medium mb-2">{{posts.titulo}}</h5>
    <br>
    <div align="justify" class="">
      {{{posts.conteudo}}}
    </div>
    <br>
    </div>
</div>

<div class="container-md">
  <div class="">
  <br>
  <div class="">
    <h7 class="title2" align="center">Recentes</h7>
  </div>
  <br>
  {{#each post}}
    <a href="/website/ler/{{_id}}" class="href">
    <div class="effect cardposts alig">
        <div class="row no-gutters">
            <div class="col-sm-2">
                <img src="{{thumb}}" class="ig" alt="thumbnail">
            </div>
            <div class="alig">
                <br>
                <small class="card-text">Publicado em {{data}}</small>
                <br>
                <h2 class="title">{{titulo}}</h2>
            </div>
            
        </div>
    </div>
    </a>
  {{/each}}
  <br>
  <h7 class="text3 center">Veja todos os artigos da <a href="/website/artigos">Starterpack</a></h7>
  <br>
  </div>
  <hr style="color: #fff">
</div>


